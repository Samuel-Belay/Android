{
    "name": "Android GUI DevContainer",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "mounts": [
    "source=/home/${localEnv:USER}/AndroidSDK,target=/opt/android-sdk,type=bind"
    ],
    "runArgs": [
        "--privileged",
        "--network=host",
        "-e", "DISPLAY=:1",
        "-p", "5901:5901"
    ],
    "workspaceFolder": "/workspace",
    "remoteUser": "vscode",
    "postStartCommand": "/usr/local/bin/start-android.sh"
}
