{
  "name": "Android Emulator DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "USERNAME": "vscode",
      "USER_UID": "1000",
      "USER_GID": "1000"
    }
  },
  "runArgs": [
    "--cap-add=SYS_ADMIN",
    "--device=/dev/kvm",
    "--shm-size=2g"
  ],
  "forwardPorts": [5900],
  "remoteUser": "vscode",
  "workspaceFolder": "/workspace",
  "features": {},
  "postCreateCommand": "echo 'Devcontainer ready! Connect VNC to localhost:5900'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-python.python",
        "ms-vscode.remote-repositories"
      ]
    }
  }
}
