{
  "name": "Android Emulator Codespace",
  "dockerFile": "Dockerfile",
  "runArgs": [
    "--shm-size=2g",
    "--device=/dev/kvm"
  ],
  "mounts": [
    "source=${localWorkspaceFolder}/.android,target=/root/.android,type=bind",
    "source=${localWorkspaceFolder}/AndroidSDK,target=/opt/android-sdk,type=bind"
  ],
  "forwardPorts": [5901],
  "postCreateCommand": "bash /scripts/start-emulator.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-python.python",
        "formulahendry.code-runner"
      ]
    }
  }
}
