{
    "name": "Android Codespace",
    "dockerFile": "Dockerfile",
    "runArgs": [
        "--mount", "source=android-sdk,target=/opt/android-sdk,type=volume",
        "--mount", "source=android-avd,target=/home/vscode/.android/avd,type=volume",
        "--shm-size=2g"
    ],
    "workspaceFolder": "/workspace",
    "remoteUser": "vscode",
    "postStartCommand": "/usr/local/bin/start-android.sh",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    }
}
