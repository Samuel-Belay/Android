{
  "name": "Android Codespace",
  "build": {
    "dockerfile": "Dockerfile-with-features"
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--device=/dev/kvm",
    "--network=host"
  ],
  "mounts": [
    "source=${localWorkspaceFolder}/.android-sdk,target=/opt/android-sdk,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.android-avd,target=/home/vscode/.android/avd,type=bind,consistency=cached"
  ],
  "remoteUser": "vscode",
  "workspaceFolder": "/workspace",
  "postStartCommand": "/usr/local/bin/start-android.sh"
}
