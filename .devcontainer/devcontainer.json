{
    "name": "Android Pixel 6 Devcontainer",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "vscjava.vscode-java-pack",
                "redhat.java",
                "vadimcn.vscode-lldb",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
    "runArgs": [
        "--network=host",
        "--cap-add=sys_nice"
    ],
    "workspaceFolder": "/workspace",
    "forwardPorts": [5901],
    "remoteUser": "vscode",
    "postStartCommand": "/usr/local/bin/start-android.sh",
    "mounts": [
        "source=${localWorkspaceFolder}/.android,target=/home/vscode/.android,type=bind"
    ]
}
