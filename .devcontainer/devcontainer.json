{
    "name": "Android Codespace",
    "dockerFile": "Dockerfile-with-features",
    "runArgs": [
        "--mount", "type=volume,source=android-sdk,target=/opt/android-sdk",
        "--mount", "type=volume,source=android-avd,target=/home/vscode/.android/avd"
    ],
    "workspaceFolder": "/home/vscode/workspace",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "postCreateCommand": "echo 'Android environment ready!'",
    "remoteUser": "vscode"
}
