{
  "name": "Android DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "USERNAME": "vscode"
    }
  },
  "runArgs": [
    "--mount", "type=volume,source=AndroidSDK,target=/opt/android-sdk",
    "--mount", "type=volume,source=AndroidAVD,target=/home/vscode/.android"
  ],
  "remoteUser": "vscode",
  "workspaceFolder": "/workspace",
  "postStartCommand": "/usr/local/bin/start-android.sh"
}
