{
  "name": "Android DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--privileged",
    "-p", "5901:5901",               // VNC port
    "-v", "${localWorkspaceFolder}/AndroidSDK:/opt/android-sdk",
    "-v", "${localWorkspaceFolder}/.android:/home/vscode/.android"
  ],
  "workspaceFolder": "/workspace",
  "remoteUser": "vscode",
  "features": {},
  "postStartCommand": "/scripts/start-emulator.sh"
}
